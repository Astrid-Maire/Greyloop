<script type="module">
import { createClient } from "https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm";

// --- Supabase credentials ---
const SUPABASE_URL = "https://fjmeqmcehghhrqlogkyf.supabase.co";
const SUPABASE_ANON_KEY = "sb_publishable_rTrt1EIvfNzsd6oqPG-ekQ_5pY8eXlo";

const db = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

// --- Carousel ---
const cards = document.querySelectorAll(".hero-box .card");
let currentIndex = 0;
function showCard(index) { cards.forEach((card, i) => card.classList.toggle("active", i === index)); }
document.getElementById("nextBtn")?.addEventListener("click", () => {
  currentIndex = (currentIndex + 1) % cards.length; showCard(currentIndex);
});
document.getElementById("prevBtn")?.addEventListener("click", () => {
  currentIndex = (currentIndex - 1 + cards.length) % cards.length; showCard(currentIndex);
});

// --- Kontaktformular ---
const kontaktForm = document.getElementById("kontaktForm");

kontaktForm?.addEventListener("submit", async (e) => {
  e.preventDefault();
  const formData = new FormData(kontaktForm);

  const data = {
    name: formData.get("name"),
    email: formData.get("email"),
    company: formData.get("company"),
    message: formData.get("message")
  };

  try {
    const { error } = await db.from("kontaktbeskeder").insert([data]);
    if (error) throw error;

    document.getElementById("kontaktSuccess").style.display = "block";
    document.getElementById("kontaktError").style.display = "none";
    kontaktForm.reset();
  } catch (err) {
    console.error("SUPABASE FEJL:", err);
    document.getElementById("kontaktError").style.display = "block";
    document.getElementById("kontaktSuccess").style.display = "none";
  }
});
</script>
